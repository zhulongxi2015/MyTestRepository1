@model List<SimpleEntity>
@foreach (var item in Model)
{
    <tr data-id="@item.Id">
        <td>
            <label>@item.Name</label>
            <input type="text" class="txt hide" value="@item.Name"/>
        </td>
        <td class="center">
            <a class="btn-edit" href="javascript:void(0);">edit</a> 
            <a class="btn-delete" href="javascript:void(0);">delete</a>
            <a class="btn-save hide" href="javascript:void(0);">save</a> 
            <a class="btn-cancel hide" href="javascript:void(0);">cancel</a>
        </td>
    </tr>
}
@if (Model.Count == 0)
{
    <tr>
        <td class="empty" colspan="2">no data found</td>
    </tr>
}