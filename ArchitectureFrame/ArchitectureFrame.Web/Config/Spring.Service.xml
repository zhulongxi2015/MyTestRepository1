<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net">
  <!--各个Service模块中注入DAL对象属性-->
  <object id="CategoryService" type="ArchitectureFrame.Service.CategoryService,ArchitectureFrame.Service">
    <property name="CategoryDAL" ref="CategoryDAL"/>
  </object>

  <object id="ArticleService" type="ArchitectureFrame.Service.ArticleService,ArchitectureFrame.Service">
    <property name="ArticleDAL" ref="ArticleDAL"/>
  </object>

  <object id="UserService" type="ArchitectureFrame.Service.UserService,ArchitectureFrame.Service">
    <property name="UserDAL" ref="UserDAL"/>
    <property name="RoleDAL" ref="RoleDAL"/>
  </object>

  <object id="RoleService" type="ArchitectureFrame.Service.RoleService,ArchitectureFrame.Service">
    <property name="RoleDAL" ref="RoleDAL"/>
  </object>
  
</objects>