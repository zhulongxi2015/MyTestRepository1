@using ArchitectureFrame.Web.Agency.ViewModels
@model LayoutViewModel<string>
@{
    Layout = null;
}

    <input type="hidden"  id="hfReturnUrl" value="@Model.Model"/>
    <div id="sign" class="tab-pane fade in active">
        <form id="login_form" method="post" action="/main/account/login">
            <div class="form-group">
                <label for="user_name" class="control-label">User Name</label>
                <div>
                    <input type="text" class="form-control" id="user_name" name="user_name" placeholder="User Name" />
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <div>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="chk_remember" name="chk_remember">
                        Remember me?
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-info" id="btn_login">Sign in</button>
            </div>
        </form>
    </div>
<script src="~/Areas/Public/Js/Account/login.js"></script>